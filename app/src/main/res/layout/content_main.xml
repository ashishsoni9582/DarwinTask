<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/content_real"
    tools:context="com.darwinlabs.darwintask.Home"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:id="@+id/scroll_view_main"
        android:fadeScrollbars="false"
        android:scrollbarThumbVertical="@color/blue"
        android:fillViewport="true"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:weightSum="3"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="510dp">
           <LinearLayout
               android:layout_marginLeft="15dp"
               android:layout_marginRight="15dp"
               android:orientation="vertical"
               android:weightSum="7"
               android:layout_weight="2.1"
               android:layout_width="match_parent"
               android:layout_height="0dp">

               <LinearLayout
                   android:layout_weight="3"
                   android:weightSum="7.5"
                   android:layout_width="match_parent"
                   android:layout_height="0dp"
                   android:orientation="vertical"
                   >
                   <LinearLayout
                       android:layout_weight="1"
                       android:weightSum="8"
                       android:orientation="horizontal"
                       android:layout_width="match_parent"
                       android:layout_height="0dp">

                       <TextView
                           android:layout_weight="1"
                           android:textSize="12sp"
                           android:gravity="center"
                           android:layout_gravity="center"
                           android:textColor="@color/textLightGrey"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:text="BTC"/>
                       <View
                           android:layout_weight="1.5"
                           android:layout_marginLeft="10dp"
                           android:layout_gravity="center"
                           android:background="@drawable/small_lines"
                           android:layout_width="0dp"
                           android:layout_height="5dp"/>
                       <View
                           android:layout_weight="2.2"
                           android:layout_gravity="center"
                           android:layout_width="0dp"
                           android:layout_height="1dp"/>
                       <LinearLayout
                           android:layout_weight="3.3"
                           android:layout_gravity="center"
                           android:orientation="vertical"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content">
                           <TextView
                               android:textColor="@color/textLightGrey"
                               android:textSize="12sp"
                               android:layout_gravity="center"
                               android:drawableBottom="@drawable/small_lines"
                               android:text="ETHEREUM BALANCE"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content" />
                           <View
                               android:layout_marginLeft="20dp"
                               android:layout_gravity="center"
                               android:background="@drawable/small_lines"
                               android:layout_width="70dp"
                               android:layout_height="2dp"/>
                       </LinearLayout>

                   </LinearLayout>

                   <LinearLayout
                   android:layout_weight="1"
                       android:weightSum="8"
                       android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="0dp">


                       <TextView
                           android:layout_weight="1"
                           android:textSize="12sp"
                           android:gravity="center"
                           android:layout_gravity="center"
                           android:textColor="@color/blue"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:text="ETH"/>
                       <View
                           android:layout_weight="1"
                           android:layout_marginLeft="10dp"
                           android:layout_gravity="center"
                           android:background="@drawable/small_blue_line"
                           android:layout_width="0dp"
                           android:layout_height="5dp"/>
                       <View
                           android:layout_weight="6"
                           android:layout_gravity="center"
                           android:layout_width="0dp"
                           android:layout_height="1dp"/>
                   </LinearLayout>

                   <LinearLayout
                   android:layout_weight="2.5"
                       android:weightSum="8"
                       android:orientation="horizontal"
                       android:layout_width="match_parent"
                       android:layout_height="0dp">

                       <TextView
                           android:layout_weight="1"
                           android:textSize="12sp"
                           android:gravity="center"
                           android:layout_gravity="center"
                           android:textColor="@color/textLightGrey"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:text="LTC"/>

                       <View
                           android:layout_weight="1.3"
                           android:layout_marginLeft="10dp"
                           android:layout_gravity="center"
                           android:background="@drawable/small_lines"
                           android:layout_width="0dp"
                           android:layout_height="5dp"/>
                       <View
                           android:layout_weight="1.3"
                           android:layout_gravity="center"
                           android:layout_width="0dp"
                           android:layout_height="1dp"/>

                           <TextView
                               android:layout_weight="4.7"
                               android:textColor="@color/blue"
                               android:textSize="40sp"
                               android:gravity="center_horizontal"
                               android:layout_gravity="end"
                               android:text="23.97642"
                               android:layout_width="0dp"
                               android:layout_height="wrap_content" />
                   </LinearLayout>

                   <LinearLayout
                   android:layout_weight="2"
                       android:weightSum="8"
                       android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="0dp">


                       <TextView
                           android:layout_weight="1"
                           android:textSize="12sp"
                           android:gravity="center"
                           android:layout_gravity="center"
                           android:textColor="@color/textLightGrey"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:text="STM"/>
                       <View
                           android:layout_weight=".1"
                           android:layout_marginLeft="10dp"
                           android:layout_gravity="center"
                           android:background="@drawable/small_lines"
                           android:layout_width="0dp"
                           android:layout_height="5dp"/>
                       <View
                           android:layout_weight="3.6"
                           android:layout_gravity="center"
                           android:layout_width="0dp"
                           android:layout_height="1dp"/>

                       <TextView
                           android:layout_weight="3.3"
                           android:textColor="@color/textBlack"
                           android:textSize="24sp"
                           android:gravity="center"
                           android:layout_gravity="start"
                           android:text="    $5976.47"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           />
                   </LinearLayout>

                   <LinearLayout
                       android:layout_weight="1"
                       android:weightSum="5"
                       android:orientation="horizontal"
                       android:layout_width="match_parent"
                       android:layout_height="0dp">

                       <TextView
                           android:layout_weight="0.6"
                           android:textSize="12sp"
                           android:gravity="center"
                           android:layout_gravity="center"
                           android:textColor="@color/textLightGrey"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:text="DSH"/>
                       <View
                           android:layout_weight="0.2"
                           android:layout_marginLeft="10dp"
                           android:layout_gravity="center"
                           android:background="@drawable/small_lines"
                           android:layout_width="0dp"
                           android:layout_height="5dp"/>
                       <View
                           android:layout_weight="4.5"
                           android:layout_gravity="center"
                           android:layout_width="0dp"
                           android:layout_height="1dp"/>
                   </LinearLayout>
               </LinearLayout>
               <LinearLayout
                   android:layout_weight="2"
                   android:weightSum="2"
                   android:orientation="vertical"
                   android:layout_width="match_parent"
                   android:layout_height="0dp">

                   <LinearLayout
                        android:layout_weight="1"
                       android:weightSum="4"
                       android:layout_width="match_parent"
                       android:layout_height="0dp"
                       android:orientation="horizontal"
                       >
                       <View
                           android:layout_weight="1.8"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"/>
                       <TextView
                           android:textSize="18sp"
                           android:gravity="end"
                           android:hint="1 ETH = "
                           android:layout_weight="1"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content" />
                       <TextView
                           android:textColor="@color/textBlack"
                           android:textSize="18sp"
                           android:textStyle="bold"
                           android:gravity="start"
                           android:text="0.0916 BTC"
                           android:layout_weight="1.2"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content" />

                   </LinearLayout>
                   <LinearLayout
                       android:layout_weight="0.5"
                       android:weightSum="5"
                       android:layout_width="match_parent"
                       android:layout_height="0dp">
                       <View
                           android:layout_weight="3"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"/>
                       <TextView
                           android:textSize="18sp"
                           android:gravity="end"
                           android:hint="DAY "
                           android:layout_weight=".8"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content" />
                       <TextView
                           android:drawableLeft="@drawable/ic_arrow_drop_down_24dp"
                           android:textColor="@color/downRed"
                           android:textSize="18sp"
                           android:textStyle="bold"
                           android:layout_gravity="end"
                           android:gravity="start"
                           android:text="0.98%"
                           android:layout_weight="1.2"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content" />

                   </LinearLayout>
                   <LinearLayout
                       android:weightSum="5"
                       android:layout_weight="0.5"
                       android:layout_width="match_parent"
                       android:layout_height="0dp">
                       <View
                           android:layout_weight="3"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"/>
                       <TextView
                           android:textSize="18sp"
                           android:gravity="end"
                           android:hint="WEEK "
                           android:layout_weight=".8"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content" />
                       <TextView
                           android:drawableLeft="@drawable/ic_arrow_drop_up_24dp"
                           android:textColor="@color/upGreen"
                           android:textSize="18sp"
                           android:textStyle="bold"
                           android:gravity="start"
                           android:text="2.65%"
                           android:layout_weight="1.2"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content" />
                   </LinearLayout>

               </LinearLayout>
               <LinearLayout
                   android:gravity="center"
                   android:layout_weight="2"
                   android:orientation="horizontal"
                   android:weightSum="3"
                   android:layout_width="match_parent"
                   android:layout_height="0dp">
                   <LinearLayout
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:orientation="vertical"
                       android:layout_height="wrap_content">
                       <ImageButton
                           android:id="@+id/sendbutton"
                           android:background="#00000000"
                           android:layout_gravity="center"
                           android:src="@drawable/sendicon"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                       <TextView
                           android:layout_marginTop="5dp"
                           android:layout_gravity="center"
                           android:text="SEND"
                           android:textStyle="bold"
                           android:textSize="18sp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />

                   </LinearLayout>
                   <LinearLayout
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:orientation="vertical"
                       android:layout_height="wrap_content">
                       <ImageButton
                           android:id="@+id/receivebutton"
                           android:background="#00000000"
                           android:layout_gravity="center"
                           android:src="@drawable/receiveicon"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />
                       <TextView
                           android:layout_marginTop="5dp"
                           android:layout_gravity="center"
                           android:text="RECEIVE"
                           android:textStyle="bold"
                           android:textSize="18sp"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content" />

                   </LinearLayout>
                   <LinearLayout
                   android:layout_weight="1"
                   android:layout_width="0dp"
                   android:orientation="vertical"
                   android:layout_height="wrap_content">

                   <ImageButton
                       android:id="@+id/buysellbutton"
                       android:background="#00000000"
                       android:layout_gravity="center"
                       android:src="@drawable/transfericon"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />
                   <TextView
                       android:layout_marginTop="5dp"
                       android:layout_gravity="center"
                       android:text="BUY/SELL"
                       android:textStyle="bold"
                       android:textSize="18sp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content" />

               </LinearLayout>

               </LinearLayout>

           </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@drawable/drop_shadow"></View>
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_weight="0.9"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TRANSACTION HISTORY"
                    android:textColor="@color/textGrey"
                    android:textSize="18sp"
                    android:gravity="center"
                    />
                    <View
                        android:background="@color/textGrey"
                        android:layout_gravity="center"
                        android:layout_width="100dp"
                        android:layout_height="1.5dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:src="@drawable/outgoing1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                             <TextView
                                 android:textSize="15sp"
                                 android:text=" 28 JULY 2017 "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <View
                                android:background="@color/textGrey"
                                android:layout_width="1dp"
                                android:layout_height="15dp"/>
                            <TextView
                                android:textSize="15sp"
                                android:text="  8:36 AM "
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>
                        <TextView
                            android:textColor="@color/textGrey"
                            android:textSize="28sp"
                            android:text="0.084316  ETH"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

            <View
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="900dp"
                ></View>
               </LinearLayout>
</ScrollView>
</RelativeLayout>